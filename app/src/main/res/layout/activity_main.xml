<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devmob.ftce.usjt.br.paises.controller.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblContinente"/>

    <Spinner
        android:id="@+id/spinnerContinente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:entries="@array/continentes" />

    <Button
        style="@android:style/Widget.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:onClick="listarPaises"
        android:text="@string/btn_busca" />


</LinearLayout>